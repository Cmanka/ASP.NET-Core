@model Brand

@{
    ViewBag.Title = "Add brand";
}

<form method="post" enctype="multipart/form-data" asp-controller="Brand" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger mt-2"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add data" class="btn btn-dark" />
    </div>
</form>