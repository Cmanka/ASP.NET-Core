@model Order

@{
    ViewBag.Title = "Checkout";
}
<h1 class="text-center">Your are just one step away from ordering your sneakers</h1>
<form method="post" asp-controller="Order" asp-action="Checkout">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input type="text" asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input type="text" asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input type="text" asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <input type="text" asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger mt-1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger mt-1"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Checkout" class="btn btn-dark" />
    </div>

</form>