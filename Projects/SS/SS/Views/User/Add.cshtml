@model UserViewModel

@{
    ViewBag.Title = "Add new user";
}

<form method="post" asp-controller="User" asp-action="Add">
    <div class="form-group">
        <span asp-validation-for="UserName" style="color:red"></span><br />
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" class="custom-select" asp-items="@(new SelectList(Model.RolesList,"Name"))">
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Password" style="color:red"></span><br />
        <label asp-for="Password" class="control-label"></label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add data" class="btn btn-dark" />
    </div>
</form>