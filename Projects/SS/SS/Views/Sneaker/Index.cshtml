@model SneakerAddViewModel

@{
    ViewBag.Title = "Sneakers List";
}

<table class="table table-hover table-bordered table-light" style="font-size:1.5rem;font-weight:600; border-spacing:7px 11px">
    <tr><th>Brand</th><th>Name</th><th>Price</th><th>Color</th>
    <th>Quantity sneakers on the storage</th><th>Sneakers Image</th>
    <th style="text-align:center;"><a asp-action="Add" class="btn btn-dark active" role="button" aria-pressed="true">Add sneakers</a></th>
    <th style="text-align:center;"><a asp-controller="Brand" asp-action="Add" class="btn btn-dark active" role="button" aria-pressed="true">Add brand</a></th></tr>
    @foreach (var sneakers in Model.Sneakers)
    {
        <tr>
            <td>@sneakers.Brand</td>
            <td>@sneakers.Name</td>
            <td>@sneakers.Price.ToString("c")</td>
            <td>@sneakers.Color</td>
            <td>@sneakers.Count</td>
            <td>
                <div style="height:250px;width:250px;">
                    <img style="height:100%;width:100%;" src="~/Images/@sneakers.PicturePath" />
                </div>
            </td>
            <td style="width:50px">
                <a asp-controller="Sneaker" asp-action="Remove" asp-route-id="@sneakers.Id" class="btn btn-dark active" >Remove</a>
            </td>
            <td style="width:50px">
                <a asp-controller="Sneaker" asp-action="Edit" asp-route-id="@sneakers.Id" class="btn btn-dark active">Edit</a>
            </td>
        </tr>
    }
</table>
